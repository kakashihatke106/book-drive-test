<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-secondary">
    <%- include("header") %>

    <main class="mt-5">
        <div class="container">
            <div class="card mx-auto w-75">
                <div class="card-body">
                    <form action="" method="post" id="type">
                        <select class="form-select" name="TestType" id="TestType" >
                            <option value="" disabled selected>select</option>
                            <option value="g2">g2</option>
                            <option value="g">g</option>
                        </select>
                        <script>
                            document.getElementById('TestType').addEventListener('change', function () {
                                document.getElementById('type').submit();
                            });
                        </script>
                    </form>
                    <h3 class="card-title mb-4">Today's User Appointments</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Full Name</th>
                                <th scope="col">Appointment Time</th>
                                <th scope="col">Test Type</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.firstName %> <%= user.lastName %></td>
                                    <td><%= user.AppointmentID.Time %></td>
                                    <td><%= user.TestType %></td>
                                    <td>
                                        <a href="/profile/<%= user.id %>" class="btn btn-info btn-sm">View</a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

</body>

</html>
